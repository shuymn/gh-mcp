{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":timezone(Asia/Tokyo)"],
  "labels": ["dependencies"],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "prHourlyLimit": 0,
  "minimumReleaseAge": "3 days",
  "internalChecksAsSuccess": true,
  "reviewersFromCodeOwners": true,
  "assignAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^mcp_version\\.go$/"],
      "matchStrings": [
        "const mcpServerVersion = \"(?<currentValue>v\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "github/github-mcp-server"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Taskfile\\.yml$/"],
      "matchStrings": [
        "GOLANGCI_LINT_VERSION: (?<currentValue>v?\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "golangci/golangci-lint"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": ">=1.0.0",
      "automerge": true
    },
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["github/github-mcp-server"],
      "automerge": false,
      "minimumReleaseAge": "0 days"
    },
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["github/github-mcp-server"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["renovate:major", "dependencies"]
    },
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["github/github-mcp-server"],
      "matchUpdateTypes": ["minor"],
      "addLabels": ["renovate:minor", "dependencies"]
    },
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["github/github-mcp-server"],
      "matchUpdateTypes": ["patch"],
      "addLabels": ["dependencies"]
    }
  ]
}
