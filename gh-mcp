#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
BIN_DIR="${SCRIPT_DIR}/.gh-mcp-bin"
BIN_PATH="${BIN_DIR}/gh-mcp"

needs_build=0
if [[ ! -x "${BIN_PATH}" ]]; then
  needs_build=1
fi

if [[ "${needs_build}" -eq 0 ]]; then
  if [[ "${SCRIPT_DIR}/go.mod" -nt "${BIN_PATH}" || "${SCRIPT_DIR}/go.sum" -nt "${BIN_PATH}" ]]; then
    needs_build=1
  elif find "${SCRIPT_DIR}" -maxdepth 1 -type f -name '*.go' -newer "${BIN_PATH}" | grep -q .; then
    needs_build=1
  fi
fi

if [[ "${needs_build}" -eq 1 ]]; then
  if ! command -v go >/dev/null 2>&1; then
    echo "gh-mcp source install requires Go on PATH because no precompiled release artifact was used." >&2
    exit 1
  fi

  mkdir -p "${BIN_DIR}"
  (
    cd "${SCRIPT_DIR}"
    go build -o "${BIN_PATH}" .
  )
fi

exec "${BIN_PATH}" "$@"
